@model DeKrekelGroup5.ViewModel.GebruikerViewModel
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Create Foo Bar</h3>
</div>

@using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post, new {@class = "modal-form"}))
{
    @Html.ValidationSummary()

    <div class="modal-body">
        <div>
            
            Paswoord:
            @Html.PasswordFor(model => model.Paswoord, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.Paswoord, "", new {@class = "text-danger"})
        </div>

    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Undo</button>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>

}




