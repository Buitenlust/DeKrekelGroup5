<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/masterLayout.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <div id="header">
            <header id="krekel">
                <a id="krekelImg" href="http://www.vbsdekrekel.be/"><img src="../Images/krekel.png" alt="krekelSchool"></a>
                <h1 id="krekelLink">
                    <a id="LinkToSite" href="http://www.vbsdekrekel.be/">Vrije basisschool de Krekel</a>
                </h1>
            </header>
            <nav id="navBar">
                <div>
                    <a id="home" href="~/Views/Home/Index.cshtml"><img src="../Images/home.png" alt="home"></a>
                    <a id="guestLogin" href="~/Views/Home/Index.cshtml"><img src=" ../Images/guest.png" alt="guestLogin" onclick=""></a>
                    <a id="guestLogin" href="~/Views/Home/Index.cshtml"><img src="../Images/admin.png" alt="adminLogin" onclick=""></a>
                    <a id="help" href="~/Views/Home/Index.cshtml"><img src="../Images/help.png" alt="help" onclick=""></a>
                    <a id="logout" href="~/Views/Home/Index.cshtml"><img id=" logout" src="../Images/logout.png" alt="logout" onclick=""></a>
</div>
            </nav>
        </div>

        <div class="container body-content">



            <div id="body">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    <div class="message-error">@TempData["Info"]</div>
                    @RenderBody()
                </section>
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - MediaTheek - De Krekel by Group5</p>
            </footer>
        </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
