@model DeKrekelGroup5.ViewModel.ItemList
@{
    ViewBag.Title = "Index";
}

<h2>Opzoeking in digitale bibliotheek</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="form-group">

    <div class="col-md-10">

    </div>
</div>

@using (Html.BeginForm("Index", "items"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <div>

            @Html.EditorFor(m => m.zoekTitel)
            
            @Html.ValidationMessageFor(m => m.zoekTitel)

            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-refresh"></span> Pas lijst aan
            </button>
        </div>

    </fieldset>
    
}


<div class="navbar navbar-inverse">
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

            @foreach (var typ in Model.Types)
            {
                <li>
                    
                    @Html.ActionLink(typ.beschrijving, "Index", new {id = typ.idtype, zoekTitel = Model.zoekTitel})
                </li>
            }

        </ul>
    </div>

</div>
    

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().uitgever)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().jaar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().auteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().imdb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().genre.beschrijving)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.titel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.uitgever)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.omschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.jaar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.auteur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imdb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.genre.beschrijving)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.exemplaar }) |
                    @Html.ActionLink("Details", "Details", new { id = item.exemplaar }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.exemplaar })
                </td>
            </tr>
        }

    </table>
