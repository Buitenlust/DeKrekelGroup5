                @Html.EditorFor(model => model.DVD.Leeftijd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DVD.Leeftijd, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.DVD.Titel, htmlAttributes: new { @class = "control-label col-md-2" })
