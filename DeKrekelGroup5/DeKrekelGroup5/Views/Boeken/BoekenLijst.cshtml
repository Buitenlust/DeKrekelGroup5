
@model DeKrekelGroup5.ViewModel.MainViewModel

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BoekenLijstViewModel.Boeken.FirstOrDefault().Exemplaar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoekenLijstViewModel.Boeken.FirstOrDefault().Titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoekenLijstViewModel.Boeken.FirstOrDefault().Auteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoekenLijstViewModel.Boeken.FirstOrDefault().Omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoekenLijstViewModel.Boeken.FirstOrDefault().Uitgever)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoekenLijstViewModel.Boeken.FirstOrDefault().Leeftijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoekenLijstViewModel.Boeken.FirstOrDefault().Thema)
        </th>
        <th>
            Beschikbaar
        </th>
        <th>Uitlenen/Binnenbrengen</th>
        <th></th>
    </tr>

    @foreach (var item in Model.BoekenLijstViewModel.Boeken)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exemplaar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uitgever)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leeftijd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thema)
            </td>
            <td>
                @if (item.Beschikbaar)
                {
                    <img src="~/Images/ok.png" class="icon"/>
                }
                else
                {
                    <img src="~/Images/cross.png" class="icon"/>
                }
                @*@Html.DisplayFor(modelItem => item.Beschikbaar)*@
            </td>
            <td>
                @*@Html.ActionLink("Uitlenen/binnenbrengen","uitlenen","","uitleen")*@
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Exemplaar })*@
                <a href=' @Url.Action("edit",new { id = item.Exemplaar }) '><img src="~/Images/edit.png"/></a> 
                @*@Html.ActionLink("Details", "Details", new { id = item.Exemplaar })*@
                <a href=' @Url.Action("details",new { id = item.Exemplaar }) '><img src="~/Images/details.png" /></a> 
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Exemplaar })*@
                <a href=' @Url.Action("delete",new { id = item.Exemplaar }) '><img src="~/Images/delete.png" /></a>
            </td>
        </tr>
    }

</table>


