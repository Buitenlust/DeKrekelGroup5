
@model DeKrekelGroup5.ViewModel.BoeksIndexViewModel


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Exemplaar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Auteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Uitgever)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Leeftijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Thema)
        </th>
        <th>
            Beschikbaar
        </th>
        <th>Uitlenen/Binnenbrengen</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Boeks)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exemplaar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uitgever)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leeftijd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thema)
            </td>
            <td>
                Beschikbaar?
            </td>
            <td>
                @*uitleenIcoonLink
                BinnenBrengenIcoonLink*@
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Exemplaar }) |
                @Html.ActionLink("Details", "Details", new { id = item.Exemplaar }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Exemplaar })
            </td>
        </tr>
    }

</table>

