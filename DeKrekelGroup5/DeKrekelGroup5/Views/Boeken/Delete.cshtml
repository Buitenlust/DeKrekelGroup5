@model DeKrekelGroup5.ViewModel.MainViewModel

@{
    ViewBag.Title = "Delete";
}
 
<div id="content">
    <h4 id="subtitel">Ben je zeker dat je dit boek wil verwijderen? <a href=' @Url.Action("index") '><img src="~/Images/Return.png" class="floatRight" /></a></h4>
    <hr />
    <div id="wrapDetails">
        <div id="leftCol">
            <img src="~/Images/default.jpg" alt="krekelSchool">
        </div>

        <div id="mainCol">
            <table id="details">
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Exemplaar)</td>
                    <td class="td2">@Html.DisplayFor(model => model.BoekViewModel.Exemplaar)</td>
                </tr>
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Auteur)</td>
                    <td class="td2">@Html.DisplayFor(model => model.BoekViewModel.Auteur)</td>
                </tr>
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Uitgever)</td>
                    <td class="td2">@Html.DisplayFor(model => model.BoekViewModel.Uitgever)</td>
                </tr>
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Leeftijd)</td>
                    <td class="td2">@Html.DisplayFor(model => model.BoekViewModel.Leeftijd)</td>
                </tr>
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Titel)</td>
                    <td class="td2">@Html.DisplayFor(model => model.BoekViewModel.Titel)</td>
                </tr>
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Omschrijving)</td>
                    <td class="td2">@Html.DisplayFor(model => model.BoekViewModel.Omschrijving)</td>
                </tr>
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Thema)</td>
                    <td class="td2">@Html.DisplayNameFor(model => model.BoekViewModel.Thema)</td>
                </tr>
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Uitgeleend)</td>
                    <td>@Html.DisplayFor(model => model.BoekViewModel.Uitgeleend)</td>
                </tr>
                <tr>
                    <td class="td1">@Html.DisplayNameFor(model => model.BoekViewModel.Beschikbaar)</td>
                    <td>@Html.DisplayFor(model => model.BoekViewModel.Beschikbaar)</td>
                </tr>
            </table>


                    @using (Html.BeginForm())
                    {
                    @Html.AntiForgeryToken()
    <p class="floatRight">

        <button type="submit" value="Delete" class="button green close"><img src="~/Images/tick.png">Verwijder!</button>
        
    </p>
                    }

            </div>
    </div>

   

</div>

