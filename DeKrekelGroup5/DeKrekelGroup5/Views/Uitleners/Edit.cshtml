@model DeKrekelGroup5.ViewModel.MainViewModel 
<div id="content">
    <h4 id="subtitel">
        Aanpassen gegevens student
        <div class="floatRight">
            <a href=' @Url.Action("index") '><img src="~/Images/Return.png" /></a>
        </div>
    </h4>
    <hr />
    <div id="wrapDetails">
        <div id="leftCol">
        </div>
        @if (Model.UitlenerViewModel != null)
        {
            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
                <div id="mainCol">
                    <table id="details">
                        <tr>
                            <td class="td1">Exemplaar</td>
                            <td class="td2 gray">
                                <strong>@Html.DisplayFor(model => model.UitlenerViewModel.Id)</strong>
                                @Html.HiddenFor(model => model.UitlenerViewModel.Id)
                            </td>
                        </tr>
                        <tr>
                            <td class="td1">Naam</td>
                            <td>
                                @Html.EditorFor(model => model.UitlenerViewModel.Naam, new { htmlAttributes = new { @class = "form-control", id = "titelInput" } })
                                @Html.ValidationMessageFor(model => model.UitlenerViewModel.Naam, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="td1">Voornaam</td>
                            <td>
                                @Html.EditorFor(model => model.UitlenerViewModel.VoorNaam, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UitlenerViewModel.VoorNaam, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="td1">Klas</td>
                            <td>
                                @Html.EditorFor(model => model.UitlenerViewModel.Klas, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UitlenerViewModel.Klas, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="td1">Adres</td>
                            <td>
                                @Html.EditorFor(model => model.UitlenerViewModel.Adres, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.UitlenerViewModel.Adres, "", new {@class = "text-danger"})
                            </td>
                        </tr>
                        <tr>
                            <td class="td1">E-mail</td>
                            <td>
                                @Html.EditorFor(model => model.UitlenerViewModel.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UitlenerViewModel.Email, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </table>
                    <p>
                        <div class="form-group">
                            <div class="button green" style="position: relative; overflow: hidden; cursor: default;">
                                <img src="~/Images/tick.png" />Ok!
                                <input type="submit" value="Save" class="btn btn-default" style="position: absolute; cursor: pointer; top: 0px; width: 100%; height: 100%; left: 0px; z-index: 100; opacity: 0;" />
                            </div>
                        </div>
                    </p>

                </div>
            }
        }
    </div>
</div>
@section JavaScript
 {
    <script src="/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="/Scripts/validation_addition.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
}