@model DeKrekelGroup5.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div id="content">
    <div id="login">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>@Model.Username</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    paswoord:
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.Paswoord, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Paswoord, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>









